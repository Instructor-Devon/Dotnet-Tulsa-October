@model Ninja
<h2>Make a Ninja!</h2>
<div asp-validation-summary="All"></div>
<form asp-action="Create" method="post">
    <div class="form-group">
        <span class="error" asp-validation-for="Name"></span>
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="form-group">
        <span asp-asp-validation-for="Email"></span>
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <span asp-asp-validation-for="SecretCode"></span>
        <label asp-for="SecretCode"></label>
        <input class="form-control" asp-for="SecretCode">
    </div>
    <div class="form-group">
        <span asp-asp-validation-for="Color"></span>
        <label asp-for="Color"></label>
        <input class="form-control" asp-for="Color">
    </div>
    <div class="form-group">
        <span asp-asp-validation-for="Bio"></span>
        <label asp-for="Bio"></label>
        <textarea class="form-control" asp-for="Bio"></textarea>
    </div>
    <button class="btn btn-primary">Submit</button>
</form>